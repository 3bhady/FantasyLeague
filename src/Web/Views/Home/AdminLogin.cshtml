@model Web.Models.Admins

<html>
<head>
    <title>Index</title>
</head>
<body>
    <h1>@ViewBag.Message</h1>
    <form class="form-horizontal" asp-controller="Home" role="form" asp-action="AdminLogin" method="post">
        <h1>Admin Login</h1>
        <div class="form-group">
            <div class="col-sm-9 center-block">
                <input class="form-control" placeholder="Username" type="text" asp-for="Username" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-9 center-block">
                <input class="form-control" placeholder="*****" type="password" asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        </div>
    </form>

</body>

</html>