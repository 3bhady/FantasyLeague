@using Web.ViewModels

@model AddViewModel




<div class="container ">
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-6 col-xs-8 ">
            <div class="nav nav-pills nav-stacked">
                <a class="list-group-item active text-center" data-toggle="pill" href="#addmatch">
                    Add Match to league
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#updatematchdate">
                    Postpone match
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#addplayer">
                    Add player to league
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#transferplayer">
                    Transfer player
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#addteam">
                    Add team to league
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#addnewspost">
                    Add news post
                </a>
                <a class="list-group-item text-center" data-toggle="pill" href="#updateplayerpoints">
                    Update Player Points
                </a>
            </div>
        </div>
        <div class="tab-content col-lg-10 col-md-10 col-sm-6 col-xs-4 ">
            <div id="addmatch" class="tab-pane fade in active">
                <h3>Enter Match info</h3>

                <form asp-controller="Home" role="form" asp-action="AddMatch" method="post">
                    <div>
                        Home Team:
                        <select asp-for=@Model.Match.HomeTeamId
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Away Team:
                        <select asp-for=@Model.Match.AwayTeamId
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Round number
                        <input type="text" id="roundnumber" spellcheck="false" asp-for="@Model.Match.RoundNumber" />
                    </div>
                    <div>
                        Date
                        <input type="datetime-local" id="matchdate" spellcheck="false" asp-for="@Model.Match.Date" />
                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Add Match" id="addmatch" class="button" />
                    </div>

                </form>
            </div>
            <div id="updatematchdate" class="tab-pane fade">
                <h3>Enter Match info</h3>

                <form asp-controller="Home" role="form" asp-action="UpdateMatchDate" method="post">
                    <div>
                        Home Team:
                        <select asp-for=@Model.Match.HomeTeamId
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Away Team:
                        <select asp-for=@Model.Match.AwayTeamId
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Round number
                        <input type="text" id="roundnumber" spellcheck="false" asp-for="@Model.Match.RoundNumber" />
                    </div>
                    <div>
                        New Date
                        <input type="datetime-local" id="matchdate" spellcheck="false" asp-for="@Model.Match.Date" />
                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Update Match" id="updatematchdate" class="button" />
                    </div>

                </form>
            </div>
            <div id="addplayer" class="tab-pane fade">
                <h3>Enter Player info</h3>

                <form asp-controller="Home" role="form" asp-action="AddPlayer" method="post">
                    <div>
                        Name
                        <input type="text" id="playername" spellcheck="false" asp-for="@Model.Player.Name" />
                    </div>
                    <div>
                        Team:
                        <select asp-for=@Model.SelectedTeamID
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Position
                        <input type="text" id="playerposition" spellcheck="false" asp-for="@Model.Player.Type" />
                    </div>
                    <div>
                        Birthdate
                        <input type="date" id="playerdate" spellcheck="false" asp-for="@Model.Player.BirthDate" />
                    </div>
                    <div>
                        Cost
                        <input type="number" step="0.1" min="0" value="0" id="playercost" spellcheck="false" asp-for="@Model.Player.Cost" />
                    </div>
                    <div>
                        Tshirt number
                        <input type="number" id="playernumber" spellcheck="false" asp-for="@Model.Player.TshirtNumber" />

                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Add Player" id="player" class="button" />
                    </div>

                </form>
            </div>
            <div id="transferplayer" class="tab-pane fade">
                <h3>Enter Player info</h3>

                <form asp-controller="Home" role="form" asp-action="TransferPlayer" method="post">
                    <div>
                        Name
                        <input type="text" id="playername" spellcheck="false" asp-for="@Model.Player.Name" />
                    </div>
                    <div>
                        Team:
                        <select asp-for=@Model.Player.TeamId
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        Tshirt number
                        <input type="number" id="playernumber" spellcheck="false" asp-for="@Model.Player.TshirtNumber" />

                    </div>
                    <div>
                        New team:
                        <select asp-for=@Model.SelectedTeamID
                                asp-items="@Model.AllTeams">

                            <option>Select Team</option>

                        </select>
                    </div>
                    <div>
                        New Tshirt number
                        <input type="number" id="playernumber" spellcheck="false" asp-for="@Model.NewTshirtNumber" />

                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Transfer Player" Player" id="transferplayer" class="button" />
                    </div>

                </form>
            </div>
            <div id="addteam" class="tab-pane fade">
                <h3>Enter Team info</h3>

                <form asp-controller="Home" role="form" asp-action="AddTeam" method="post">
                    <div>
                        Name
                        <input type="text" id="teamname" spellcheck="false" asp-for="@Model.Team.Name" />
                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Add Team" id="team" class="button" />
                    </div>

                </form>
            </div>
            <div id="addnewspost" class="tab-pane fade">
                <h3>Enter News post info</h3>

                <form asp-controller="Home" role="form" asp-action="AddNewsPost" method="post">
                    <div>
                        Title
                        <input type="text" id="posttitle" spellcheck="false" asp-for="@Model.NewsPost.Title" />
                    </div>
                    <div>
                        Body
                        <input type="text" id="postbody" spellcheck="false" asp-for="@Model.NewsPost.Body" />
                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Post" id="news" class="button" />
                    </div>

                </form>
            </div>
            <div id="updateplayerpoints" class="tab-pane fade">
                <h3>Enter Player Action</h3>

                <form asp-controller="Home" role="form" asp-action="UpdatePlayer" method="post">
                    <div>
                        Player
                        <select asp-for=@Model.SelectedPlayerID
                                asp-items="@Model.AllPlayers">

                            <option>Select Player</option>

                        </select>
                    </div>
                    <div>
                        Action
                        <select asp-for=@Model.SelectedAction
                                asp-items="@Model.PlayerActions">

                            <option>Select Action</option>

                        </select>
                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Update" id="playeraction" class="button" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
