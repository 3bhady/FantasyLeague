@model Web.ViewModels.SquadViewModel
@using Newtonsoft.Json
@inject IJsonHelper Json;

<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/squad.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
@{
 

    if (Model.squad.Count == 0)
    {<div class="col-xs-12">
        <form asp-controller="Game" asp-action="SubmitSquad" method="post">
            <!--      squad formation !!-->
            
                
                   

                
            <div class="col-lg-12 form-horizontal">
                <div class="col-lg-4">
                    <h1 class="danger">@ViewBag.message</h1>
                        <h1>Formation</h1>
                        <select class="form-control form-inline"  asp-for= "@Model.userSquad.Formation" id="formtion" placeholder="HeroTeam" maxlength="15">
                            <option value="3-3-4">3-3-4</option>
                            <option value="3-4-3">3-4-3</option>
                            <option value="3-5-2">3-5-2</option>
                            <option value="4-3-3">4-3-3</option>
                            <option value="4-4-2">4-4-2</option>
                            <option value="5-3-2">5-3-2</option>
                        </select>
                       
                   <h1> Filter Players</h1>
                    <select class="form-control form-inline  " id="filterPlayers" placeholder="HeroTeam" maxlength="15">
                     
                            <option selected disabled hidden>Filter Players </option>
                            <option value="all">All</option>
                     
                        <optgroup label="By Position">
                            <option value="striker">strikers</option>
                            <option value="goalKeeper">Goal Keepers</option>
                            <option value="midfielder">MidFielders</option>
                            <option value="defender">defenders</option>
                        </optgroup>
                </select>

                </div>
                <div class="col-lg-12 " style="margin-bottom:1%; " >
                    <h1>Hero Player</h1>
                    <select class="form-control" asp-for="@Model.userSquad.HeroPlayerId" id="heroPlayer" placeholder="HeroPlayer" maxlength="30"></select>
                </div>
               
              
                <div class="col-lg-4 " >
                    <h1>Favorite Team</h1>
                    <select class="form-control form-inline" asp-for="@Model.userSquad.HeroTeamId" id="heroTeam" placeholder="HeroTeam" maxlength="15">
                        </select>
                    <input type="submit" class="btn" style="margin-top:3%" value="Build your Squad now ! " />
                </div>
            
                </div>
            
                <!--     end  squad formation !!-->
         
</form>
    </div>

    }
    else
    {

    <div id="pitch" class="col-sm-9 pitch" >
    </div>
    <div id="sub" class="col-sm-3" style="border:1px solid black;">
     <h1 style="color:cadetblue"></h1>  
    </div>




    }
}
<script src="~/js/site.js"></script>
